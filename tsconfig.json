{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["dom", "es6"],
    "jsx": "react-jsx",
    "target": "es2016",
    "module": "esnext",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "strict": false,
    "strictNullChecks": false,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@static/*": ["./static/*"],
      "@actions/*": ["./src/actions/*"],
      "@api/*": ["./src/api/*"],
      "@components/*": ["./src/components/*"],
      "@pages/*": ["./src/pages/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@network/*": ["./src/network/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["./**/*.ts", "./**/*.tsx", "./modules.d.ts", "./**/*.svg"],
  "exclude": ["node_modules"]
}
